generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  email    String    @unique
  password String
  comments Comment[]
  tickets  Ticket[]
  tokens   Token[]
}

model Token {
  id         String   @id @default(uuid())
  userId     String
  created_at DateTime @default(now())
  expired_at DateTime
  token      String
  user       User     @relation(fields: [userId], references: [id])
}

model Ticket {
  ticket_id   String    @id @default(uuid())
  subject     String
  description String
  created     DateTime  @default(now())
  assignee_id String ?
  assignee    User?      @relation(fields: [assignee_id], references: [id])
  comments    Comment[]
  status_id String?
  status Status?   @relation(fields: [status_id], references: [id])
  priority_id String?
  priority Priority? @relation(fields: [priority_id], references: [id]) 
  
}

model Status{
  id String @id @default(uuid())
  description String
  tickets  Ticket[]
}

model Priority{
  id String  @id @default(uuid())
  description String @unique
  created DateTime @default(now())
  tickets  Ticket[]

}

model Comment {
  comment_id String @id @default(uuid())
  content    String
  user_id    String
  ticket_id  String
  c_type_id  Int
  c_type     Ctype  @relation(fields: [c_type_id], references: [id])
  ticket     Ticket @relation(fields: [ticket_id], references: [ticket_id])
  user       User   @relation(fields: [user_id], references: [id])
}

model Ctype {
  id          Int       @id @default(autoincrement())
  description String
  comments    Comment[]
}
